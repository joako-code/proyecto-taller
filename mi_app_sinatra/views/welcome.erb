<section class="welcome-container" role="main" aria-label="Welcome and account summary">
  <div class="welcome-card">
    <h2>Welcome, <span class="highlight"><%= @user.first_name %></span>!</h2>
    <p>You are successfully signed in to <strong>CloverWallet</strong>, your trusted virtual wallet.</p>

    <div class="balance-info" aria-live="polite" aria-atomic="true">
      <p>Your current balance:</p>
      <p class="balance-amount" id="balance-amount">$<%= @account.balance %></p>
    </div>

    <div class="welcome-buttons">
      <a href="/dashboard" class="btn" role="button" tabindex="0">Go to Dashboard</a>
      <a href="/logout" class="btn btn-secondary" role="button" tabindex="0">Log Out</a>
    </div>
  </div>

  <div class="welcome-illustration" aria-hidden="true">
    <img src="/assets/trebol.svg" alt="Clover Wallet Logo" class="clover-svg" width="120" height="120" />
  </div>
</section>

